<%- include('../header') %>
<style>
  body {
    background-color: #f8f9fa;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }
  .blog-card-container {
    margin: 60px auto;
    max-width: 900px; 
  }
  .blog-card {
    border-radius: 25px;
    overflow: hidden;
    box-shadow: 0 8px 25px rgba(0,0,0,0.12);
    transition: all 0.3s ease-in-out;
    background-color: #fff;
  }
  .blog-card:hover {
    transform: translateY(-12px);
    box-shadow: 0 25px 50px rgba(0,0,0,0.2);
  }
  .blog-img {
    width: 100%;
    height: 400px;
    object-fit: cover;
    transition: transform 0.5s ease;
    border-bottom: 1px solid #eee;
  }
  .blog-card:hover .blog-img {
    transform: scale(1.06);
  }
  .blog-title {
    font-weight: 700;
    font-size: 2.4rem;
    margin-bottom: 15px;
    color: #343a40;
  }
  .blog-meta {
    color: #6c757d;
    font-size: 0.95rem;
    margin-bottom: 20px;
  }
  .blog-meta strong {
    color: #495057;
  }
  .blog-content p {
    line-height: 1.7;
    font-size: 1rem;
    margin-bottom: 20px;
    color: #212529;
  }
  hr {
    border-top: 1px solid #dee2e6;
    margin: 25px 0;
  }
  .btn-modern {
    border-radius: 50px;
    padding: 12px 30px;
    font-weight: 600;
    transition: all 0.4s ease;
    box-shadow: 0 5px 15px rgba(0,0,0,0.12);
    margin: 5px 10px; 
  }
  .btn-warning-modern {
    background: linear-gradient(135deg, #ff9a3c, #ff6a3c);
    color: #fff;
    border: none;
  }
  .btn-warning-modern:hover {
    background: linear-gradient(135deg, #ff6a3c, #ff9a3c);
    transform: translateY(-4px) scale(1.08);
    box-shadow: 0 12px 28px rgba(0,0,0,0.25);
    color: #fff;
  }
  .btn-danger-modern {
    background: linear-gradient(135deg, #ff6a6a, #ff3c3c);
    color: #fff;
    border: none;
  }
  .btn-danger-modern:hover {
    background: linear-gradient(135deg, #ff3c3c, #ff6a6a);
    transform: translateY(-4px) scale(1.08);
    box-shadow: 0 12px 28px rgba(0,0,0,0.25);
    color: #fff;
  }
  .btn-secondary-modern {
    background: #6c757d;
    color: #fff;
    border: none;
  }
  .btn-secondary-modern:hover {
    background: #5a6268;
    transform: translateY(-4px) scale(1.05);
    box-shadow: 0 8px 20px rgba(0,0,0,0.2);
    color: #fff;
  }
  @media(max-width: 992px) {
    .blog-card-container {
      max-width: 90%;
    }
    .blog-title {
      font-size: 2rem;
    }
    .blog-img {
      height: 300px;
    }
  }
  @media(max-width: 576px) {
    .blog-img {
      height: 220px;
    }
    .blog-title {
      font-size: 1.6rem;
    }
    .btn-modern {
      padding: 10px 22px;
      font-size: 0.9rem;
    }
  }
</style>
<div class="page-wrapper">
  <div class="container blog-card-container">
    <div class="row justify-content-center">
      <div class="col-12">

        <div class="blog-card">

          <% if(blog.coverImage){ %>
            <img src="/<%= blog.coverImage %>" class="blog-img">
          <% } %>

          <div class="card-body blog-content p-5">

            <h2 class="blog-title"><%= blog.title %></h2>
            <p class="blog-meta">
              <strong>Date:</strong> <%= blog.date ? new Date(blog.date).toDateString() : "-" %> |
              <strong>Category:</strong> <%= blog.category %>
            </p>
            <hr>
            <p>
              <strong>Short Description:</strong><br>
              <%= blog.shortDes %>
            </p>
            <hr>
            <p>
              <strong>Content:</strong><br>
              <%= blog.content %>
            </p>
            <div class="d-flex justify-content-center flex-wrap mt-4">
              <a href="/blog/editblog/<%= blog._id %>" class="btn-modern btn-warning-modern">Edit</a>
              <a href="/blog/deleteblog/<%= blog._id %>" class="btn-modern btn-danger-modern">Delete</a>
              <a href="/blog/viewblog" class="btn-modern btn-secondary-modern">Back</a>
            </div>

          </div>
        </div>

      </div>
    </div>
  </div>
</div>

<%- include('../footer') %>
