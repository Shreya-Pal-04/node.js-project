<%- include('../header') %>
<style>
  .blog-card {
    border-radius: 20px;
    overflow: hidden;
    transition: all 0.3s ease-in-out;
    background: #fff;
  }
  .blog-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 30px rgba(0,0,0,0.15);
  }
  .blog-img {
    height: 220px;
    object-fit: cover;
    transition: transform 0.4s ease;
  }
  .blog-card:hover .blog-img {
    transform: scale(1.05);
  }
  .explore-btn {
    border-radius: 30px;
    transition: all 0.3s ease;
  }
  .explore-btn:hover {
    background-color: #343a40;
    color: #fff;
    transform: scale(1.05);
  }
  .search-container {
    margin-bottom: 15px;
    text-align: center;
  }
  .search-input {
    width: 60%;
    max-width: 400px;
    padding: 10px 15px;
    border-radius: 50px;
    border: 1px solid #ced4da;
    transition: all 0.3s ease;
  }
  .search-input:focus {
    outline: none;
    border-color: #ff6a3c;
    box-shadow: 0 0 8px rgba(255,106,60,0.3);
  }
  .search-btn {
    padding: 10px 20px;
    border-radius: 50px;
    border: none;
    background: linear-gradient(135deg,#ff9a3c,#ff6a3c);
    color: #fff;
    font-weight: 600;
    margin-left: 10px;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  .search-btn:hover {
    background: linear-gradient(135deg,#ff6a3c,#ff9a3c);
    transform: translateY(-2px) scale(1.05);
    box-shadow: 0 8px 20px rgba(0,0,0,0.2);
  }
  .category-filters {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-bottom: 30px;
    flex-wrap: wrap;
  }
  .category-filters a {
    position: relative;
    padding: 5px 0;
    color: #6c757d;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
  }
  .category-filters a::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0%;
    height: 2px;
    background-color: #ff6a3c; 
    transition: width 0.3s ease;
  }
  .category-filters a:hover::after,
  .category-filters a.active::after {
    width: 100%;
  }
  .category-filters a:hover,
  .category-filters a.active {
    color: #ff6a3c; 
  }
</style>

<div class="page-wrapper">
  <div class="page-breadcrumb">
    <div class="row">
      <div class="col-12">
        <h4 class="page-title" style="display:flex; justify-content:center;">Our Blogs</h4>
      </div>
    </div>
  </div>

  <div class="container-fluid">

    <!-- Search Bar -->
    <div class="search-container">
      <form action="/blog/viewblog" method="GET">
        <input type="text" name="search" class="search-input" placeholder="Search by title or category..." value="<%= searchQuery || '' %>">
        <button type="submit" class="search-btn">Search</button>
      </form>
    </div>

    <!-- Filters -->
    <div class="category-filters">
      <% const categories = ["All","Technology","Lifestyle","Education / Learning","Entertainment","Finance / Business"]; %>
      <% categories.forEach(cat => { %>
        <a href="<%= cat === 'All' ? '/blog/viewblog' : '/blog/viewblog?category=' + encodeURIComponent(cat) %>" class="<%= (selectedCategory === cat || (!selectedCategory && cat === 'All')) ? 'active' : '' %>">
          <%= cat %>
        </a>
      <% }) %>
    </div>

    <div class="row">
      <% if(blogs.length === 0){ %>
        <div class="col-12 text-center text-muted">
          <h5>No blogs found</h5>
        </div>
      <% } %>

      <% blogs.forEach((blog) => { %>
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="card blog-card shadow-sm h-100">
            <% if(blog.coverImage){ %>
              <img src="/<%= blog.coverImage %>" class="card-img-top blog-img">
            <% } %>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title font-weight-bold"><%= blog.title %></h5>
              <p class="text-muted mb-2"><small><%= blog.date ? new Date(blog.date).toDateString() : "-" %></small></p>
              <p class="card-text"><%= blog.shortDes %></p>
              <div class="mt-auto">
                <a href="/blog/single/<%= blog._id %>" class="btn btn-outline-dark explore-btn px-4">Explore More â†’</a>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</div>

<%- include('../footer') %>
